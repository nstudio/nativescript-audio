{
  "compilerOptions": {
    "noEmitOnError": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "removeComments": true,
    "declaration": false,
    "experimentalDecorators": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "exclude": ["node_modules"]
}
